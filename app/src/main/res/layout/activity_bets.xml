<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.zakiva.euro.Bets"
    android:background="#aefec33e">


    <RelativeLayout
        android:layout_width="fill_parent"
        android:id="@+id/games_frame"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:layout_marginTop="33dp"
        android:onClick="buttonGamesClicked"
        android:layout_below="@+id/logo"
        >

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="30dp"
        android:textColor="#ff000000"
        android:background="#ffffff"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:textAllCaps="false"
        android:text="Games"
        android:id="@+id/buttonGames"
        android:onClick="buttonGamesClicked"
        android:layout_marginTop="40dp" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="66dp"
        android:id="@+id/game_icon"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/game"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

            </RelativeLayout>

    <ImageView
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:id="@+id/logo"
        android:background="@drawable/logo_eubet"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:id="@+id/team_frame"
        android:layout_height="wrap_content"
        android:onClick="buttonWinningTeamClicked"
        android:background="#ffffff"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/games_frame"
        >

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="30dp"
            android:textColor="#ff000000"
            android:background="#ffffff"
            android:onClick="buttonWinningTeamClicked"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:textAllCaps="false"
            android:text="Winner"
            android:id="@+id/buttonTeam"
            android:layout_marginTop="40dp" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="55dp"
            android:id="@+id/cup_icon"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/cup"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="fill_parent"
        android:id="@+id/scorer_frame"
        android:layout_height="wrap_content"
        android:onClick="buttonScorersClicked"
        android:background="#ffffff"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/team_frame"
        >

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="30dp"
            android:textColor="#ff000000"
            android:background="#ffffff"
            android:onClick="buttonScorersClicked"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:textAllCaps="false"
            android:text="Top Scorer"
            android:id="@+id/buttonPlayer"
            android:layout_marginTop="40dp" />

        <ImageView
            android:layout_width="72dp"
            android:layout_height="60dp"
            android:id="@+id/player_icon"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="9dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/player"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>






</RelativeLayout>
