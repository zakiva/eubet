<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.zakiva.euro.Bets"
    android:background="#000000">


    <RelativeLayout
        android:layout_width="fill_parent"
        android:id="@+id/games_frame"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:layout_marginTop="20dp"
        android:onClick="buttonGamesClicked"
        android:layout_below="@+id/betsLabel"
        >

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="25dp"
        android:textColor="#ff000000"
        android:background="#ffffff"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:textAllCaps="false"
        android:text="Games"
        android:padding="10dp"
        android:id="@+id/buttonGames"
        android:onClick="buttonGamesClicked"
         />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:id="@+id/game_icon"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/game"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

            </RelativeLayout>

    <ImageView
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:id="@+id/logo"
        android:background="@drawable/logo_eubet"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:id="@+id/team_frame"
        android:layout_height="wrap_content"
        android:onClick="buttonWinningTeamClicked"
        android:background="#ffffff"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/games_frame"
        >

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="25dp"
            android:textColor="#ff000000"
            android:background="#ffffff"
            android:onClick="buttonWinningTeamClicked"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:textAllCaps="false"
            android:padding="10dp"
            android:text="Winner"
            android:id="@+id/buttonTeam"
             />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="42dp"
            android:id="@+id/cup_icon"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/cup"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="fill_parent"
        android:id="@+id/scorer_frame"
        android:layout_height="wrap_content"
        android:onClick="buttonScorersClicked"
        android:background="#ffffff"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/team_frame"
        >

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="25dp"
            android:textColor="#ff000000"
            android:background="#ffffff"
            android:onClick="buttonScorersClicked"
            android:layout_centerHorizontal="true"
            android:padding="10dp"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:textAllCaps="false"
            android:text="Top Scorer"
            android:id="@+id/buttonPlayer"
             />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:id="@+id/player_icon"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/player"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:id="@+id/groups_frame"
        android:layout_height="wrap_content"
        android:onClick="buttonBetGroupsClicked"
        android:background="#ffffff"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/logo"
        >

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="25dp"
            android:textColor="#ff000000"
            android:background="#ffffff"
            android:onClick="buttonBetGroupsClicked"
            android:layout_centerHorizontal="true"
            android:padding="10dp"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:textAllCaps="false"
            android:text="My Groups"
            android:id="@+id/buttonGroups"
             />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/groups_icon"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/groups"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Bets"
        android:textSize="30dp"
        android:textColor="#ffffff"
        android:layout_marginTop="40dp"
        android:id="@+id/betsLabel"
        android:layout_below="@+id/groups_frame"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
