<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.zakiva.euro.WinningTeam"
    android:background="#000000">

    <ListView
        android:id="@+id/listWinningTeams"
        android:layout_width="match_parent"
        android:divider="@null"
        android:layout_below="@+id/time"
        android:layout_marginTop="6dp"
        android:dividerHeight="0dp"
        android:layout_height="wrap_content"
        android:transcriptMode="alwaysScroll" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#ffffff"
        android:layout_marginTop="5dp"
        android:textSize="30dp"
        android:textAllCaps="false"
        android:id="@+id/chosenTeam"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open till 15 June, 16:00"
        android:textSize="14dp"
        android:layout_marginTop="20dp"
        android:textAllCaps="false"
        android:layout_below="@+id/chosenTeam"
        android:id="@+id/time"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/cup1"
        android:background="@drawable/cup"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/cup2"
        android:background="@drawable/cup"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
